<%= simple_form_for @user, url: user_registration_path do |f| %>

    <%= f.error_notification %>

    <div>
      <%= f.input :first_name, input_html: { autofocus: true, autocomplete: 'first-name' } %>
    </div>

    <div>
      <%= f.input :last_name, input_html: { autocomplete: 'last-name' } %>
    </div>

    <div>
      <%= f.input :email, input_html: { autocomplete: 'email' } %>
    </div>

    <div>
      <%= f.input :password, input_html: { autocomplete: 'current-password' } %>
    </div>

    <div>
      <%= f.input :password_confirmation, label: 'Confirm Password', input_html: { autocomplete: 'current-password' } %>
    </div>

    <div>
      <%= f.button :submit, 'Sign Up',  class: "btn btn-primary w-100" %>
    </div>

<% end %>